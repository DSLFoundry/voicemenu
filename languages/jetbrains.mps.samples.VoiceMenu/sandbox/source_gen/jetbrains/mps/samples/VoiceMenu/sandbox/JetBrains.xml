<?xml version = "1.0" encoding = "UTF-8" standalone = "no"?>
<state_machine>
  
  <state id="JetBrains" isInitial="true">
    <playback>Welcome to JetBrains</playback>
    
    
    <activity event="X" target_child="timeout">
      <playback>Timeout</playback>
      <state id="timeout">
        <action name="Replay Options"></action>
      </state>
      
    </activity>
    <activity event="1" target_child="Sales">
      <state id="Sales">
        <activity event="X" target_child="timeout">
          <playback>Timeout</playback>
          <state id="timeout">
            <action name="Record"></action>
          </state>
          
        </activity>
        <activity event="1" target_child="Call department">
          <state id="Call department">
            <action name="Direct Call"></action>
          </state>
          
        </activity>
        <activity event="2" target_child="Get Informations">
          <state id="Get Informations">
            <action name="Get Info"></action>
          </state>
          
        </activity>
        <activity event="#" target_child="Previous Menu">
          <state id="Previous Menu">
            <action name="Direct Call"></action>
          </state>
          
        </activity>
      </state>
      
    </activity>
    <activity event="2" target_child="General Questions">
      <state id="General Questions">
        <activity event="X" target_child="timeout">
          <playback>Repeating possible options</playback>
          <state id="timeout">
            <action name="Replay Options"></action>
          </state>
          
        </activity>
        <activity event="1" target_child="Leave us a message">
          <state id="Leave us a message">
            <action name="Record"></action>
          </state>
          
        </activity>
        <activity event="2" target_child="MPS support">
          <state id="MPS support">
            <activity event="X" target_child="timeout">
              <playback>Timeout! </playback>
              <state id="timeout">
                <action name="Hang Up"></action>
              </state>
              
            </activity>
            <activity event="1" target_child="Call the team">
              <state id="Call the team">
                <action name="Direct Call"></action>
              </state>
              
            </activity>
            <activity event="2" target_child="Get Informations">
              <state id="Get Informations">
                <action name="Get Info"></action>
              </state>
              
            </activity>
            <activity event="#" target_child="Previous Menu">
              <state id="Previous Menu">
                <action name="Back"></action>
              </state>
              
            </activity>
          </state>
          
        </activity>
        <activity event="#" target_child="Previous Menu">
          <state id="Previous Menu">
            <action name="Back"></action>
          </state>
          
        </activity>
      </state>
      
    </activity>
    
  </state>
</state_machine>