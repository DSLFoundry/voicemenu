<?xml version = "1.0" encoding = "UTF-8" standalone = "no"?>
<state_machine>
  
  <state id="Jet-Mobile" isInitial="true">
    <toast>Hello, welcome in Jet-Mobile</toast>
    
    
    <activity event="1" target_child="Internet">
      <toast>Did you know that our internet is faster than ever?</toast>
      <state id="Internet">
        <activity event="1" target_child="Discount">
          <toast>Welcome in section of discounts, here is everything cheaper.</toast>
          <state id="Discount">
            <activity event="1" target_child="Summer discount">
              <toast>Don't worry, while waiting you will listen your calm music.</toast>
              <state id="Summer discount">
                <action name="Direct Call"></action>
              </state>
              
            </activity>
            <activity event="2" target_child="Hidden discounts">
              <state id="Hidden discounts">
                <action name="Get Info"></action>
              </state>
              
            </activity>
            <activity event="*" target_child="Step back">
              <toast>Going back to the previous menu.</toast>
              <state id="Step back">
                <action name="Back"></action>
              </state>
              
            </activity>
          </state>
          
        </activity>
        <activity event="2" target_child="Data limit">
          <toast>Take care this call will be monitored.</toast>
          <state id="Data limit">
            <action name="Direct Call"></action>
          </state>
          
        </activity>
        <activity event="*" target_child="Return to main menu">
          <toast>Going back to the previous menu.</toast>
          <state id="Return to main menu">
            <action name="Back"></action>
          </state>
          
        </activity>
      </state>
      
    </activity>
    <activity event="2" target_child="Payment">
      <toast>Since now we offer you easiest way of payment.</toast>
      <state id="Payment">
        <activity event="1" target_child="Billing">
          <state id="Billing">
            <action name="Other"></action>
          </state>
          
        </activity>
        <activity event="2" target_child="Recharging">
          <toast>Now we are sending you super secret informations.</toast>
          <state id="Recharging">
            <action name="Get Info"></action>
          </state>
          
        </activity>
        <activity event="3" target_child="Payments">
          <toast>Connecting you with a human.</toast>
          <state id="Payments">
            <action name="Direct Call"></action>
          </state>
          
        </activity>
        <activity event="*" target_child="Step back">
          <toast>Going back to the previous menu.</toast>
          <state id="Step back">
            <action name="Back"></action>
          </state>
          
        </activity>
      </state>
      
    </activity>
    <activity event="3" target_child="Roaming">
      <state id="Roaming">
        <action name="Get Info"></action>
      </state>
      
    </activity>
    <activity event="4" target_child="News">
      <state id="News">
        <activity event="1" target_child="Summer News">
          <state id="Summer News">
            <action name="Direct Call"></action>
          </state>
          
        </activity>
        <activity event="2" target_child="Cold News">
          <state id="Cold News">
            <action name="Get Info"></action>
          </state>
          
        </activity>
        <activity event="3" target_child="Step Back">
          <toast>Going back to the previous menu.</toast>
          <state id="Step Back">
            <action name="Back"></action>
          </state>
          
        </activity>
      </state>
      
    </activity>
    <activity event="5" target_child="Other requirements">
      <state id="Other requirements">
        <action name="Other"></action>
      </state>
      
    </activity>
    
  </state>
</state_machine>