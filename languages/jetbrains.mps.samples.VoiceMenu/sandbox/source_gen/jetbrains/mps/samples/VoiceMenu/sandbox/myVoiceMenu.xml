<?xml version = "1.0" encoding = "UTF-8" standalone = "no"?>
<state_machine>
  
  <state id="myVoiceMenu" isInitial="true">
    <toast>Welcome to our voicemenu</toast>
    
    
    <activity event="1" target_child="Internetu">
      <toast>Welcome to the Internet</toast>
      <state id="Internetu">
        <activity event="1" target_child="Speed up">
          <toast>Increasing speed was chosen</toast>
          <state id="Speed up">
            <action name="Get Info"></action>
          </state>
          
        </activity>
        <activity event="2" target_child="Discount">
          <toast>Great choice!</toast>
          <state id="Discount">
            <activity event="1" target_child="Big Discount">
              <state id="Big Discount">
                <action name="Direct Call"></action>
              </state>
              
            </activity>
            <activity event="2" target_child="Small Discount">
              <state id="Small Discount">
                <action name="Direct Call"></action>
              </state>
              
            </activity>
            <activity event="#" target_child="Going Back">
              <state id="Going Back">
                <action name="Back"></action>
              </state>
              
            </activity>
            <activity event="*" target_child="Going Back">
              <state id="Going Back">
                <action name="Back"></action>
              </state>
              
            </activity>
          </state>
          
        </activity>
      </state>
      
    </activity>
    <activity event="2" target_child="Television">
      <state id="Television">
        <action name="Get Info"></action>
      </state>
      
    </activity>
    
  </state>
</state_machine>